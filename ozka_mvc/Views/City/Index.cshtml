@using EntityLayer;
@model IEnumerable<City>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a class="btn btn-success" asp-action="Create">Yeni Şehir Ekle</a>
@if (Model != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Şehir Adı</th>
                <th>Ülke</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sehir in Model)
            {
                <tr>
                    <td>@sehir.Id</td>
                    <td>@sehir.City_name</td>
                    <td>@sehir.Country</td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@sehir.Id">Düzenle</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@sehir.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">veri bulunamadı</p>
}

